<div class="grid_specialities ">
    <div class="scroller ">
    <% a_spe = specialities.to_a.in_groups(4, false) %>
    <div class="marge"></div>
      <div class="d-flex  flex-column first-col">
        <% a_spe[0].each do |s| %>
          <%= link_to speciality_path(s) do %>
            <div class="speciality" data-aos="fade-up" data-aos-anchor-placement="bottom-bottom" >
              <h2><%= s.name %></h2>
              <p><i><%= s.description%></i></p>
            </div>
          <%end%>
        <%end%>
      </div>
      <div class="d-flex  flex-column second-col">
        <% a_spe[1].each do |s| %>
