              <p><i><%= s.description%></i></p>
            </div>
          <%end%>
        <%end%>
      </div>
      <div class="d-flex  flex-column third-col">
        <% a_spe[2].each do |s| %>
          <%= link_to speciality_path(s) do %>
            <div class="speciality" data-aos="fade-up" data-aos-anchor-placement="bottom-bottom" >
              <h2><%= s.name %></h2>
              <p><i><%= s.description%></i></p>
            </div>
          <%end%>
        <%end%>
      </div>
      <div class="d-flex  flex-column fourth-col">
        <% a_spe[3].each do |s| %>
          <%= link_to speciality_path(s) do %>
            <div class="speciality" data-aos="fade-up" data-aos-anchor-placement="bottom-bottom" >
              <h2><%= s.name %></h2>
              <p><i><%= s.description%></i></p>
            </div>
          <%end%>
        <%end%>
      </div>
  </div>
</div>